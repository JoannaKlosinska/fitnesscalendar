<% content_for :navbar do %>
  <%= render 'coaches/navbar' %>
<% end %>
<div class="grid">
  <div class="content">
    <div class="form">
    <h2>Sign In, Coach</h2>

    <%= form_for(resource, as: resource_name, url: coach_session_path(resource_name)) do |f| %>

      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      <% end %>
      <br>
      <%= f.button "Sign in", type: 'submit' %>
    <% end %>

    <%= render "coaches/shared/links" %>
    </div>
  </div>
</div>