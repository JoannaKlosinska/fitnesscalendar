<div class="content">
  <div class="form">
  <h2>Change your password</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "New password (minimum 6 characters)" %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm new passowrd" %>
      </div>

      <%= f.button "Change my password", type: 'submit' %>
    <% end %>

  <%= render "devise/shared/links" %>
  </div>
</div>
